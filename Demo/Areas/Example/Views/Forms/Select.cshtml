@{
    ViewBag.Title = "Select";
}

@section styles {
    <link href="@Url.Content("~/Content/bootstrap-select.css")" rel="stylesheet" />
}

@section scripts {
    <script src="@Url.Content("~/Scripts/bootstrap-select.min.js")"></script>
    <script>
        $(document).ready(function () {
            $('select').selectpicker();
        });
    </script>
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Select </h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->
