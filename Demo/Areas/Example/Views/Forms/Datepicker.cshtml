@{
    ViewBag.Title = "Datepicker";
}

@section styles {
    <link href="@Url.Content("~/Content/bootstrap-datepicker3.min.css")" rel="stylesheet" />
}

@section scripts {
    <script src="@Url.Content("~/Scripts/bootstrap-datepicker.min.js")"></script>
    <script src="@Url.Content("~/Scripts/locales/bootstrap-datepicker.zh-TW.min.js")"></script>
    <script>
        $(document).ready(function () {
            //$("#input-id").fileinput();
            $('.date').datepicker({
                //language: "zh-TW",
                clearBtn: true,
                todayHighlight: true
            });
        });
    </script>

}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Datepicker 日期選擇器</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->


官方文件: <a href="http://bootstrap-datepicker.readthedocs.org/en/latest/">http://bootstrap-datepicker.readthedocs.org/en/latest/</a>
