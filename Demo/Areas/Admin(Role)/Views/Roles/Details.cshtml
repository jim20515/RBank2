@model Demo.Areas.Admin.Models.AspNetRoles

@{
    ViewBag.Title = "AspNetRoles Details";
}


<style>
th {
    text-align: right;
	width: 20%;
}
th, td {
    padding: 10px 15px !important;
}
</style>

<div>

	<div class="row heading">

        <div class="col-md-6 vcenter">
            <h2>角色細節</h2>
        </div>

        <div class="col-md-6 vcenter text-right">
							@Html.ActionLink("前往修改頁面", "Edit", new { id = Model.Id }, new { @class="btn btn-success" })
				@Html.ActionLink("返回列表", "Index", null, new { @class = "btn btn-default" })

			        </div>

    </div>

    <hr />

    <table class="table table-striped">
		<tr>
			<th>@Html.DisplayNameFor(model => model.Name)</th>
			<td>@Html.DisplayFor(model => model.Name)</td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Account_ControllerName)
            </th>
            <td>
                @{
                    var names = string.Join(", ", Model.Account_ControllerName.Select(x => x.Title));
                    @Html.DisplayFor(model => names)
                }
            </td>
		</tr>
    </table>
</div>

