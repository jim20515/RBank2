@model Demo.Areas.Admin.Models.AspNetUsers

@{
    ViewBag.Title = "AspNetUsers Delete";
}


<style>
th {
    text-align: right;
	width: 20%;
}
th, td {
    padding: 10px 15px !important;
}
</style>

<div>
    @*<h4>是否確認刪除此筆資料?</h4>*@
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()

		<div class="row heading">

            <div class="col-md-6 vcenter">
                <h2>帳號刪除</h2>
            </div>

            <div class="col-md-6 vcenter text-right">
                <input id="delete_btn" type="submit" value="刪除" class="btn btn-danger" onclick="return confirm('是否確認刪除此筆資料?');" />
                @Html.ActionLink("返回列表", "Index", null, new { @class = "btn btn-default" })
            </div>

        </div>

    }

    <hr />

    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <td>
                @Html.DisplayFor(model => model.UserName)
            </td>
        </tr>


		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Email)
			</th>
			<td>
				@Html.DisplayFor(model => model.Email)
			</td>
		</tr>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <td>
                @Html.DisplayFor(model => model.CreateDate)
            </td>
        </tr>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Roles)
            </th>
            <td>
                @Html.DisplayFor(model => model.AspNetRoles.FirstOrDefault().Name)
            </td>
        </tr>

		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Status)
			</th>
			<td>
				@Html.DisplayFor(model => model.Status)
			</td>
		</tr>

    </table>

</div>
