@model string

@{
    var id = ViewData.TemplateInfo.HtmlFieldPrefix;
    var value = ViewData.TemplateInfo.FormattedModelValue.ToString();
    var src = string.IsNullOrEmpty(value) ? "http://placehold.it/300x200?text=IMAGE" : value;
}

